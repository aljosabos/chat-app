{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "#configs/*": ["configs/*"]
    },

    "resolvePackageJsonImports": true,
    "resolvePackageJsonExports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
